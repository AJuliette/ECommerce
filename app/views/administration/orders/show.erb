<h1 class="h3 mb-3">Order nÂ°<%= @order.id%></h1>

<div class="row">
  <div class="col-12 col-md-6 col-lg-4">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Information on recipient</h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Name: <%= @order.user_name %></li>
        <li class="list-group-item">Billing Address: <%= @order.billing_address.readable %></li>
        <li class="list-group-item">Delivery Address: <%= @order.delivery_address.readable %></li>
        <li class="list-group-item">Created on: <%= @order.created_at %></li>
        <% if @order.status %>
          <li class="list-group-item">Treated on: <%= @order.updated_at %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <table id="datatables-basic" class="table table-striped" style="width:100%">
          <thead>
            <tr>
              <th>Item</th>
              <th>Size</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody>
            <% @order.cart_items.each do |element| %>
              <tr>
                <td><%= element.name %></td>
                <td><%= element.size %></td>
                <td><%= element.quantity %></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th>Item</th>
              <th>Size</th>
              <th>Quantity</th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="mb-3">
  <%= button_to "Back to orders", administration_orders_path, method: :get, class:"btn btn-primary" %>
</div>