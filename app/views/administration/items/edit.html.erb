<div class="col-12 col-xl-12">
  <div class="card">
    <div class="card-header">
      <h5 class="card-title">Modify item <%= @item.name %></h5>
    </div>
    <div class="card-body">
      <form>
        <div class="form-group row">
          <label class="col-form-label col-sm-2 text-sm-right">Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Sock">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-sm-2 text-sm-right">Image url</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="https://some-url.com">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-sm-2 text-sm-right">Description</label>
          <div class="col-sm-10">
            <textarea class="form-control" placeholder="Description" rows="3"></textarea>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-sm-2 text-sm-right">Price</label>
          <div class="col-sm-10">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">$</span>
              </div>
              <input type="text" class="form-control" placeholder="50.0">
            </div>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-form-label col-sm-2 text-sm-right">Discount percentage</label>
          <div class="col-sm-10">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="20">
              <div class="input-group-prepend">
                <span class="input-group-text">%</span>
              </div>
            </div>
          </div>
        </div>
