<section class="slice sct-color-1" id="sct_products">
    <div class="container">
        <div class="row">
            
            <div class="col-lg-9 order-lg-2">
                <div class="row-wrapper">
                
                    <div class="row cols-xs-space cols-sm-space cols-md-space">
                <% @items.each do |item| %>    
                        <div class="col-lg-4">
                
                            <div class="block product bg-transparent no-radius">
                                <div class="product-image">
                                    <div class="view view-first">
                <img src="<%= item.image_url %>" alt="img shop"> 
                                    </div>

                                    <div class="product-actions--a product-actions--2" data-animation-in="slideInRight"  data-animation-out="slideOutRight">
                                        <button type="button" class="btn-product-action">
                                        <i class="ion-bag"></i>
                                        </button>
                                        <button type="button" class="btn-product-action">
                                        <i class="ion-ios-heart-outline"></i>
                                        </button>
                                    </div>

                                </div>
                    
                                <div class="block-body px-0">
                                    <h3 class="heading heading-6 strong-500 text-capitalize mb-0"><%= link_to item.name, items_show_path(item.id) %></h3>
                                    
                                    <div class="price-wrapper">
                                        <span class="price heading-6 c-gray-light strong-400"><span class="price-value"><%=number_to_currency( item.price, :unit=>'â‚¬') %></span></span>
                                    </div>
                                </div>
                            </div>

                        </div>
                <% end %>
                        
                    </div> 

                </div>

                <!-- Pagination -->
            </div>
            <div class="col-lg-3 order-lg-1">
                <div class="sidebar sidebar--style-4 b-lg-right">
                    
                    <!-- Product categories menu -->
                    <div class="sidebar-object b-xs-bottom pb-4 mb-4">
                        <h2 class="sidebar-object-title">
                        <span>Categories</span>
                        </h2>
                         
                        <div class="filter-checkbox">
                        <% @categories.each do |cat| %> 
                            <div class="checkbox">
                                <input type="checkbox" id="chkFilterCategoryWomen">
                                <label for="chkFilterCategoryWomen"><%= cat.name %></label>
                            </div>
                        <% end %>
                        </div>
                    </div>
                    <!-- Filter by size -->
                    <div class="sidebar-object b-xs-bottom pb-4 mb-4">
                        <h2 class="sidebar-object-title">
                        <span>Filter</span> by size
                        </h2>
                        <ul class="list-inline checkbox-alphanumeric">
                            <li>
                                <input type="radio" id="size-1" name="size">
                                <label for="size-1">S</label>
                            </li>
                            <li>
                                <input type="radio" id="size-2" name="size">
                                <label for="size-2">M</label>
                            </li>
                            <li>
                                <input type="radio" id="size-3" name="size" checked="">
                                <label for="size-3">L</label>
                            </li>
                            <li>
                                <input type="radio" id="size-4" name="size">
                                <label for="size-4">XL</label>
                            </li>
                        </ul>
                    </div>
                    
                    <!-- Filter by material -->
                    <div class="sidebar-object b-xs-bottom pb-4 mb-4">
                        <h2 class="sidebar-object-title">
                        <span>Filter by brand</span>
                        </h2>
                        <div class="filter-checkbox">
                        <% @brands.each do |brand| %>
                            <div class="checkbox">
                                <input type="checkbox" id="chkFilterMaterialCotton">
                                <label for="chkFilterMaterialCotton"><%= brand.name %></label>
                            </div>
                        <% end %>
                        </div>
                    </div>
                            
                        </div>
                    </div>
        </div>
    </div>
</section>